@model IEnumerable<FitnessCenterApp.Models.Service>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">Hizmet Yönetimi</h1>
        <p>
            <a asp-action="Create" class="btn btn-success rounded-pill shadow">
                <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
            </a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-lg">
            <thead class="table-dark">
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Süre (Dakika)</th>
                    <th>Ücret (TL)</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-dark">@item.Name</td>
                        <td class="text-dark">@item.Duration Dakika</td>
                        <td class="text-dark">@item.Price.ToString("C2")</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Düzenle</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detay</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>