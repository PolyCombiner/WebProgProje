@model IEnumerable<FitnessCenterApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">Randevu Listesi</h1>
        <p>
            <a asp-action="Create" class="btn btn-success rounded-pill shadow">
                <i class="bi bi-calendar-plus"></i> Yeni Randevu Al
            </a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-lg">
            <thead class="table-dark">
                <tr>
                    <th>Randevu Tarihi</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-dark">
                            @item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td class="text-dark">@item.Trainer.FullName</td>
                        <td class="text-dark">@item.Service.Name</td>
                        <td>
                            @if (item.IsConfirmed)
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">Düzenle</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detay</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">İptal Et</a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            Henüz kayıtlı bir randevunuz bulunmamaktadır.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>