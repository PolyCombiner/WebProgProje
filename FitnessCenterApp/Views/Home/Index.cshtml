@model IEnumerable<FitnessCenterApp.Models.Service>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Fitness Center'a Hoş Geldiniz</h1>
        <p class="col-md-8 fs-4 mx-auto">Sağlıklı bir yaşam için profesyonel eğitmenler eşliğinde spor yapın. Hemen bir ders seçin ve randevunuzu oluşturun.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Hemen Kayıt Ol</a>
        }
    </div>
</div>

<div class="container">
    <h2 class="text-center mb-4">Hizmetlerimiz</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="my-0 fw-normal">@item.Name</h4>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h1 class="card-title pricing-card-title text-center">@item.Price <small class="text-muted fw-light">TL</small></h1>
                        <ul class="list-unstyled mt-3 mb-4 text-center">
                            <li>⏱ Süre: @item.Duration Dakika</li>
                            <li>💪 Profesyonel Eğitmenler</li>
                            <li>📅 Esnek Saatler</li>
                        </ul>
                        <div class="mt-auto">
                            <a asp-controller="Appointments" asp-action="Create" class="w-100 btn btn-lg btn-outline-primary">Randevu Al</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>